void ejercicio10(){
    int a, b, c, d;
    printf("Ingresa a, b, c, d: ");
    scanf("%d %d %d %d", &a, &b, &c, &d);
    printf("Resultado: %d\n", (a + b) * (c - d));
}

void ejercicio11(){
    int sec;
    printf("Segundos: ");
    scanf("%d", &sec);
    int h = sec / 3600;
    int m = (sec % 3600) / 60;
    int s = sec % 60;
    printf("%d segundos = %d h, %d m, %d s\n", sec, h, m, s);
}

void ejercicio12(){
    int n;
    printf("Número: ");
    scanf("%d", &n);
    printf("Es %s\n", (n % 2 == 0) ? "par" : "impar");
}

void ejercicio13(){
    int a, b;
    printf("Dos números: ");
    scanf("%d %d", &a, &b);
    int mayor = (a > b) ? a : b;
    int dif = (a > b) ? (a - b) : (b - a);
    float prom = (a + b) / 2.0;
    printf("Mayor: %d, Diferencia: %d, Promedio: %.2f\n", mayor, dif, prom);
}

void ejercicio14(){
    int n;
    printf("Número: ");
    scanf("%d", &n);
    int abs = (n < 0) ? -n : n;
    printf("Valor absoluto: %d\n", abs);
}

void ejercicio15(){
    float r, h;
    const float PI = 3.14;
    printf("Radio y altura: ");
    scanf("%f %f", &r, &h);
    float v = PI * pow(r, 2) * h;
    printf("Volumen: %.2f\n", v);
}

