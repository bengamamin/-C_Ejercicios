
#include <stdio.h>
#include <math.h>

void ejercicio1(){
    int num1, num2;
    printf("Ingresa dos numeros: ");
    scanf("%d %d", &num1, &num2);
    printf("La suma de %d y %d es: %d\n", num1, num2, num1 + num2);
}

